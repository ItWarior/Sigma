{
    "compilerOptions": {
        "types": ["node"],
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "resolveJsonModule" : true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}
